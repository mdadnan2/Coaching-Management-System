# Backend Environment Variables Template
# Copy this file to .env.development or .env.production and fill in actual values

# Server Configuration
NODE_ENV=development
PORT=5010
API_VERSION=v1

# Database Configuration
DB_CONNECTION_STRING=mongodb://localhost:27017/coaching_management
DB_NAME=coaching_management

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security
BCRYPT_SALT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
MORGAN_FORMAT=dev

# Frontend URL (for redirects, emails, etc.)
FRONTEND_URL=http://localhost:3000
